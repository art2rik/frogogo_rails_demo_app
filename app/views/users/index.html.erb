<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-2 offset-1">
    <%= link_to '+ Add User', new_user_path, class: "btn btn-secondary" %>
  </div>
  <div class="col-6 text-center">
    <h1>Users</h1>
  </div>
  <div class="col-2 offset-1">
    <%= link_to 'Logout', destroy_admin_session_path, method: :delete, class: "btn btn-warning" %>
  </div>
</div>
<% @users.each_with_index do |user, i| %>
  <% if (i + 1) % 3 == 1 %>
    <div class="row mb-1">
  <% end %>
  <div class="col-4"> <%= render partial: "users/card", locals: { user: user } %></div>
  <% if (i + 1) % 3 == 0 %>
    </div>
  <% end %>
<% end %>
<% if @users.count % 3 > 0 %>
  </div>
<% end %>

<div class="row">
  <div class="col offset-1">
    <%= paginate @users, theme: 'twitter-bootstrap-4' %>
  </div>
</div>



