<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row justify-content-center">
    <div class="col">
      <%= link_to users_path do %>
        <%= fa_icon "undo 2x" %>
      <% end %>
    </div>
    <div class="col-8">
      <h1>id #<%= @user.id %></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-3">
      <% if @user.avatar.attached? %>
        <% avatar = url_for(@user.avatar) %>
      <% else %>
        <% avatar = 'no-photo.png' %>
      <% end %>
      <img class="img-thumbnail" src="<%= avatar %>" alt="user avatar"/>
    </div>
    <div class="col-4">
      <div class="row">
        <b>Phone:</b>
      </div>
      <div class="row">
        <%= @user.phone %>
      </div>
      <div class="row">
        <b>Name:</b>
      </div>
      <div class="row">
        <%= @user.name %>
      </div>
      <div class="row">
        <b>Api Key:</b>
      </div>
      <div class="row">
        <%= @user.api_key %>
      </div>
      <div class="row pt-4">
        <%= link_to edit_user_path(@user), class: "px-1" do %>
          <%= fa_icon "edit 2x" %>
        <% end %>
        <%= link_to @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "px-1" do %>
          <%= fa_icon "trash 2x" %>
        <% end %>
      </div>
    </div>
  </div>
</div>




